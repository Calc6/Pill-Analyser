<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment1.MainController">
  <children>
    <MenuBar>
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#handleOpenFile" text="Open" />
            <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Close" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Delete" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <ImageView fx:id="imageView" onMouseClicked="#onImageClick" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
    <HBox alignment="CENTER" spacing="10">
      <RadioButton fx:id="originalRadioButton" text="Original" onAction="#handleImageModeChange" selected="true"/>
      <RadioButton fx:id="grayscaleRadioButton" text="Grayscale" onAction="#handleImageModeChange"/>
      <RadioButton fx:id="bwRadioButton" text="Black and White" onAction="#handleImageModeChange"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
      <children>
        <Slider fx:id="resizeSlider" maxWidth="300.0" />
        <VBox spacing="10">
          <Label text="Threshold:" />
          <Slider fx:id="thresholdSlider" min="0" max="1" value="0.065" showTickLabels="true" showTickMarks="true" majorTickUnit="0.1" blockIncrement="0.01" />
          <Label fx:id="thresholdValueLabel" text="Threshold Value: 0.065" />

        </VBox>
      </children>
    </HBox>
  </children>
</VBox>
